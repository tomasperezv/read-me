{
  "manifest_version": 2,
  "name": "read-me",
  "description": "Text to voice webpages via the Speech Synthesis API",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "read-me.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["read-me.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
